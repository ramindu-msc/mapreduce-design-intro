<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Specifies the URI for the default filesystem -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://namenode:8020</value>
    </property>

    <!-- Specifies the location of the Hadoop's local filesystem -->
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/tmp/hadoop</value>
    </property>
</configuration>
